{
	"$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noParameterAssign": "off"
			}
		}
	},
	"files": {
		"ignore": [
			"node_modules",
			"dist",
			"vendor",
			"package.json",
			"package-lock.json",
			"__tests__/**/*.js"
		]
	}
}
